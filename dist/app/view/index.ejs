<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        .img_wrap {
            width:150px;
            height: 100px;
            position:relative;
            border:1px solid #999;
        }
        .img_wrap img {
            width:150px;
            height:100px;
            display:none;
            position:absolute;
            top:0;
            left:0;
        } 
        .tpl_img {
            z-index:100;
        }
    </style>
</head>
<body>
    <div class="tpl_list">
          <img src="img/tpl1.png" alt="模板1" crossOrigin='anonymous'>
    </div>
    <div class="">
         <!-- <div class="img_wrap" >
           <img class="select_img"  src="" alt="">  
           <img class="tpl_img" src="" alt="">
         </div> -->
         <canvas id="img_wrap" width='150px' height='100px'></canvas>
         <img class="img_preview" src="" alt="">
         <input type="file">
         <button>生成</button>
    </div>
    <script>
        function $(selector) {
            return document.querySelector(selector)
        }
       var eleImgCover = $('.tpl_list>img')
       var imgUpload
        $('input[type=file]').onchange = function(event) {
            var file = event.target.files[0]
            var url = window.URL.createObjectURL(file)
            imgUpload = new Image();

            imgUpload.src = url;
        }
       

        var canvas = document.getElementById('img_wrap');
        var context = canvas.getContext('2d');
        $('button').onclick = function () {
            
            context.drawImage(imgUpload, 0, 0, 150, 100);
            context.drawImage(eleImgCover, 0, 0, 150, 100);
            var url = canvas.toDataURL('image/png');
            $('.img_preview').src = url
        }
        
    </script>
</body>
</html>